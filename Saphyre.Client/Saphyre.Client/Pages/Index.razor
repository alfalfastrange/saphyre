@page "/"
@using Saphyre.Client.ViewModels
@using Saphyre.Client.Providers

@inject NavigationManager UriHelper

<PageTitle>Saphyre Users</PageTitle>

<h1>Saphyre Users</h1>
<br/>
<br/>
@if (saphyreUsers == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <a class="btn btn-primary" href="/createuser">New</a>
    <br/>
    <table class="table">
        <thead>
            <tr>
                <th>User ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Date Of Birth</th>
                <th scope="col">Edit</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var saphyreUser in saphyreUsers)
            {
                <tr>
                    <td>@saphyreUser.UserId</td>
                    <td>@saphyreUser.FirstName</td>
                    <td>@saphyreUser.LastName</td>
                    <td>@saphyreUser.DateOfBirth.ToShortDateString()</td>
                    <td class="align-middle">
                        <a class="btn btn-primary" href="/edituser/@saphyreUser.UserId.ToString()">Edit</a>
                    </td>
                    <td class="align-middle">
                        <button class="btn btn-danger" @onclick="async() => await DeleteSaphyreUser(saphyreUser)">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
