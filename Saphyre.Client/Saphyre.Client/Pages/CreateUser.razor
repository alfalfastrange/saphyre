@page "/createuser"

@using Saphyre.Client.ViewModels
@using Saphyre.Client.Providers

@inject NavigationManager UriHelper

<PageTitle>Saphyre Users</PageTitle>

<h1>Saphyre Users</h1>
<br/>
<br/>
<h3>Create User</h3>


<EditForm Model="@saphyreUser" OnSubmit="@CreateSaphyreUser">
    <InputText @bind-Value=saphyreUser.FirstName />
    <InputText @bind-Value=saphyreUser.LastName />
    <InputDate @bind-Value=saphyreUser.DateOfBirth />
    <button type="submit" class="btn btn-primary">Save</button>
    <a class="btn btn-danger" href="/">Cancel</a>
</EditForm>
